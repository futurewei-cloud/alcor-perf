{
    "NeutronPerformancePlugin.neutron_network_scalability": [
        {
            "args": {
                "flavor": {
                    "name": "m1.small"
                },
                "image": {
                    "name": "cirros-healthcheck"
                },
                "number_of_networks": 10, 
                "instances_per_network": 10,
                "instance_booting_requests": 2
            }, 
            "runner": {
                "type": "constant",
                "times": 100,
                "concurrency": 20,
                "timeout": 1000
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            },
            "context": {
                "users": {
                    "users_per_tenant": 1,
                    "tenants": 1
                },
                "quotas": {
                    "nova": {
                        "instances": -1,
                        "cores": -1,
                        "ram": -1
                    }
                }
            }
        }
    ]
}
