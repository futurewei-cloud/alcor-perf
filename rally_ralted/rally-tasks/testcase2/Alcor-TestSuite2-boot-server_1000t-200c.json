{
    "NovaServers.boot_and_delete_server": [
        {    
            "args": {
                "flavor": {
                    "name": "m1.tiny"
                },
                "image": {
                    "name": "cirros-healthcheck"
                },
                "auto_assign_nic": true
            },
            "runner": {
                "type": "constant",
                "times": 1000,
                "concurrency": 200,
                "timeout": 1000
            }, 
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            },
            "context": {
                "users": {
                    "users_per_tenant": 3,
                    "tenants": 2
                },
                "quotas": {
                    "nova": {
                       "instances": -1, 
                       "cores": -1,
                       "ram": -1
                    }  
                }
            }
        }
    ]
}
